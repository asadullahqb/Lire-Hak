<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.geometry.Insets?>
<VBox
        styleClass="view"
        prefHeight="600.0"
        prefWidth="-Infinity"
        xmlns="http://javafx.com/javafx/11.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="EngineControllers.IndexController">
   <children>
      <Label
              layoutX="40.0"
              layoutY="14.0"
              prefHeight="27.0"
              prefWidth="253.0"
              text="Index Images / Extract Features">
         <font>
            <Font
                    size="18.0" />
         </font></Label>
      <GridPane
              prefHeight="25.0"
              layoutX="40.0"
              layoutY="50.0">
         <children>
            <TextField
                    fx:id="filePath"
                    GridPane.columnIndex="0"
                    promptText="No folder selected."
                    focusTraversable="false"
                    editable="false"
                    prefWidth="700.0" >
               <VBox.margin>
                  <Insets
                          right="45.0"/>
               </VBox.margin>
            </TextField>
            <Button
                    fx:id="chooseFolderBtn"
                    GridPane.columnIndex="1"
                    layoutX="828.0"
                    layoutY="50.0"
                    mnemonicParsing="false"
                    onAction="#chooseFolder"
                    prefWidth="225.0"
                    text="Choose Folder..." />
         </children>
      </GridPane>
      <Button
              fx:id="startIndexingBtn"
              layoutX="40.0"
              layoutY="95.0"
              mnemonicParsing="false"
              onAction="#startIndexing"
              prefHeight="25.0"
              prefWidth="150.0"
              text="Start Indexing" />
      <ProgressBar
              fx:id="indexProgressBar"
              layoutX="40.0"
              layoutY="131.0"
              prefHeight="25.0"
              prefWidth="924.0"
              progress="0.0" />
      <TextArea
              fx:id="indexOutput"
              editable="false"
              layoutX="40.0"
              layoutY="165.0"
              prefHeight="413.0"
              prefWidth="924.0">
         <cursor>
            <Cursor
                    fx:constant="NONE" />
         </cursor></TextArea>
      <Button
              fx:id="stopIndexingBtn"
              layoutX="199.0"
              layoutY="95.0"
              mnemonicParsing="false"
              onAction="#stopIndexing"
              prefHeight="25.0"
              prefWidth="150.0"
              text="Stop Indexing" />
      <Button
              fx:id="clearIndexBtn"
              layoutX="358.0"
              layoutY="95.0"
              mnemonicParsing="false"
              onAction="#clearIndex"
              prefHeight="25.0"
              prefWidth="150.0"
              text="Clear Index" />
   </children>
</VBox>
