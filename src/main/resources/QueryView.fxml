<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane
        prefHeight="600.0"
        prefWidth="1000.0"
        xmlns="http://javafx.com/javafx/11.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="EngineControllers.QueryController">
   <children>
      <Label
              layoutX="40.0"
              layoutY="14.0"
              prefHeight="26.0"
              prefWidth="200.0"
              text="Query Index Images">
         <font>
            <Font
                    size="17.0" />
         </font></Label>
      <TextField
              fx:id="imgPath"
              promptText="No image selected."
              focusTraversable="false"
              editable="false"
              layoutX="40.0"
              layoutY="50.0"
              prefHeight="25.0"
              prefWidth="777.0" />
      <Button
              fx:id="chooseImgBtn"
              layoutX="829.0"
              layoutY="50.0"
              mnemonicParsing="false"
              onAction="#chooseImg"
              prefHeight="25.0"
              prefWidth="136.0"
              text="Choose Image..." />
      <Button
              fx:id="startQueryBtn"
              layoutX="411.0"
              layoutY="84.0"
              mnemonicParsing="false"
              onAction="#startQuery"
              prefHeight="25.0"
              prefWidth="183.0"
              text="Begin Querying Images" />
      <ComboBox
              fx:id="FeatureSelector"
              layoutX="700.0"
              layoutY="84.0">
         <items>
            <FXCollections
                    fx:factory="observableArrayList">
               <String
                       fx:value="CEDD"/>
               <String
                       fx:value="FCTH"/>
               <String
                       fx:value="AutoColorCorrelogram"/>
            </FXCollections>
         </items>
      </ComboBox>
      <ProgressBar
              fx:id="queryProgressBar"
              layoutX="40.0"
              layoutY="115.0"
              prefHeight="19.0"
              prefWidth="925.0"
              progress="0.0" />
      <TilePane
              fx:id="tilePane"
              layoutX="40.0"
              layoutY="141.0"
              prefHeight="452.0"
              prefWidth="925.0" />
   </children>
</AnchorPane>
