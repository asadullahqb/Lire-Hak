<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="EngineControllers.IndexController">
   <children>
      <Label layoutX="40.0" layoutY="14.0" prefHeight="27.0" prefWidth="253.0" text="Index Images / Extract Features">
         <font>
            <Font size="18.0" />
         </font></Label>
      <TextField fx:id="filePath" editable="false" layoutX="40.0" layoutY="50.0" prefHeight="25.0" prefWidth="381.0" />
      <Button fx:id="chooseFolderBtn" layoutX="429.0" layoutY="50.0" mnemonicParsing="false" onAction="#chooseFolder" prefHeight="25.0" prefWidth="136.0" text="Choose Folder..." />
      <Button fx:id="startIndexingBtn" layoutX="40.0" layoutY="95.0" mnemonicParsing="false" onAction="#startIndexing" prefHeight="25.0" prefWidth="150.0" text="Start Indexing" />
      <ProgressBar fx:id="indexProgressBar" layoutX="40.0" layoutY="131.0" prefHeight="25.0" prefWidth="525.0" progress="0.0" />
      <TextArea fx:id="indexOutput" editable="false" layoutX="40.0" layoutY="165.0" prefHeight="413.0" prefWidth="525.0">
         <cursor>
            <Cursor fx:constant="NONE" />
         </cursor></TextArea>
      <Button fx:id="stopIndexingBtn" layoutX="199.0" layoutY="95.0" mnemonicParsing="false" onAction="#stopIndexing" prefHeight="25.0" prefWidth="150.0" text="Stop Indexing" />
   </children>
</AnchorPane>
